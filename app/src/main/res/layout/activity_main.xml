<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/fire_foreground" />

    <TextView
        android:id="@+id/kesz"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fire"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="arial"
        android:text="KÉSZENLÉT"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire" />

    <TextView
        android:id="@+id/text"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/kesz"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="arial"
        android:text="Készenlét app SMS riasztás figyelő szolgáltatása"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kesz" />

    <TextView
        android:id="@+id/me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="arial"
        android:text="Készítette: Tóth Bence"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:fontFamily="arial"
        android:gravity="right"
        android:onClick="onUidClicked"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>